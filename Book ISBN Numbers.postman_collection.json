							"\tpm.response.to.have.status(\"OK\");",
							"});",
							"",
							"var parseJson = xml2Json(responseBody);",
							"",
							"pm.test(\"Result is true\", function () {",
							"    pm.expect(parseJson['soap:Envelope']['soap:Body']['m:IsValidISBN10Response']['m:IsValidISBN10Result']).to.equal(\"true\");",
							"});",
							"",
							"pm.test(\"Header soap:Envelope is present in the response\", function () {",
							"    pm.expect(parseJson).to.have.property('soap:Envelope');",
							"}); ",
							"",
							"pm.test(\"IsValidISBN10Result field is not empty\", function () {",
							"    pm.expect(parseJson).to.be.an('object');",
